{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "module": "es2022",
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "checkJs": true,
    "outDir": "types",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/schemas/*.json"
  ]
}
