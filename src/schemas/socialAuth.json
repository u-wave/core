{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://ns.u-wave.net/config/socialAuth.json#",
  "uw:key": "u-wave:socialAuth",
  "uw:access": "admin",
  "type": "object",
  "title": "Social Login",
  "description": "Settings for third party login integrations like Google.",
  "properties": {
    "google": {
      "type": "object",
      "title": "Google Authentication",
      "description": "Settings for the Google authentication integration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enabled",
          "default": false
        },
        "clientID": {
          "type": "string",
          "title": "Client ID",
          "description": "The OAuth2 Client ID.",
          "minLength": 1
        },
        "clientSecret": {
          "type": "string",
          "title": "Client Secret",
          "description": "The secret key.",
          "minLength": 1
        },
        "callbackURL": {
          "type": "string",
          "format": "uri-reference",
          "title": "Callback URL",
          "description": "The URL that Google will redirect to once a signin is complete. This URL should contain the code that finalizes the login on the Ã¼Wave end."
        }
      },
      "required": ["enabled"],
      "dependentSchemas": {
        "enabled": {
          "$comment": "If `enabled` is set and is true, `clientID` and `clientSecret` are both required.",
          "oneOf": [
            {
              "properties": {
                "enabled": {
                  "const": false
                }
              }
            },
            {
              "type": "object",
              "required": ["clientID", "clientSecret"]
            }
          ]
        }
      },
      "default": {}
    }
  },
  "required": ["google"]
}
